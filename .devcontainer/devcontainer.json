{
  "name": "Java Spring Boot Development",
  "dockerComposeFile": "docker-compose.yml",
  "service": "app",
  "workspaceFolder": "/workspaces/demo-playground",
  "forwardPorts": [8083],
  "portsAttributes": {
    "8083": {
      "label": "Spring Boot App",
      "onAutoForward": "notify"
    }
  },

  // MySQL is started automatically via depends_on in docker-compose.yml
  "postCreateCommand": [
    "bash", "-c", 
    "chmod +x .devcontainer/*.sh && echo 'Building project...' && cd app && mvn clean install -DskipTests"
  ],
  "postStartCommand": [
    "bash", "-c",
    "./.devcontainer/startup.sh"
  ],

  "customizations": {
    "vscode": {
      "extensions": [
        "vscjava.vscode-java-pack",
        "pivotal.vscode-boot-dev-pack",
        "ms-vscode.docker",
        "ms-azuretools.vscode-docker",
        "ms-vscode.vscode-json"
      ],
      "settings": {
        "java.home": "/usr/lib/jvm/java-8-openjdk-amd64",
        "java.configuration.updateBuildConfiguration": "automatic",
        "maven.executable.path": "/usr/bin/mvn",
        "java.compile.nullAnalysis.mode": "automatic"
      }
    },
    "codespaces": {
      "openFiles": [
        "README.md"
      ]
    }
  },
  
  "remoteUser": "vscode"
}